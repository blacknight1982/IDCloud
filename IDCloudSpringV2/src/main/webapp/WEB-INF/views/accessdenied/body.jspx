<div xmlns:spring="http://www.springframework.org/tags"
	xmlns:spring-form="http://www.springframework.org/tags/form" 
	xmlns:c="http://java.sun.com/jsp/jstl/core" 
	xmlns:util="urn:jsptagdir:/WEB-INF/tags/util" 
	xmlns:jsp="http://java.sun.com/JSP/Page" version="2.0">
  <jsp:directive.page contentType="text/html;charset=UTF-8" />
  <jsp:output omit-xml-declaration="yes" />
  <spring:message var="app_name" code="application.name" htmlEscape="false" />
  <spring:message var="title" code="welcome_titlepane" arguments="${app_name}" htmlEscape="false" />
  <spring:url value="/resources/jquery/jquery.scrollTo.js" var="jquery_scrollTo_js"/>
  <spring:url value="/resources/idcloudjs/index.js" var="index_js"/>
  
  <spring:message code="inspiration.webcontents.url.location" var="serverlocation" htmlEscape="false" />
  
  <script type="text/javascript" src="${jquery_scrollTo_js}"><!-- added this avoiding script tag problem --></script>
  <script type="text/javascript" src="${index_js}"><!-- added this avoiding script tag problem --></script>
  
  <p>
	<spring:message code="welcome_h3" arguments="${app_name}" />
  </p>
  <p>
  	<spring:message code="security.accessdenied" />
  </p>

  <c:url value="/login" var="loginUrl"/>
  <spring-form:form action="${loginUrl}" method="POST" commandName="loginForm">
  	<p>
  		<spring-form:errors path="*" element="div"/>
  	</p>
  	<c:if test="${param.logout != null}">
  		<div>
  			<spring:message code="security.loggedout" />
  		</div>
  	</c:if>
  	<c:if test="${param.accessDenied != null}">
  		<div>
  			<spring:message code="security.pageaccessdenied" />
  		</div>
  	</c:if>
  	<c:if test="${param.pleaseLogin != null}">
  		<div>
  			<spring:message code="security.requestlogin" />
  		</div>
  	</c:if>
  	<table id="login_table">
  		<tr>
  			<td><label for="username"><spring:message code="security.login.username" /></label></td>
  			<td><spring-form:input path="idcloud_username"/></td>
  		</tr>
  		<tr>
  			<td><label for="password"><spring:message code="security.login.password" /></label></td>
  			<td><spring-form:password path="idcloud_password"/></td>
  		</tr>
  		<spring:message code="security.login.loginbutton" var="loginbutton" />
  		<tr>
  			<td><input id="submit" name="submit" type="submit" value="${loginbutton}"/></td>
  		</tr>
  	</table>
  </spring-form:form>
</div>