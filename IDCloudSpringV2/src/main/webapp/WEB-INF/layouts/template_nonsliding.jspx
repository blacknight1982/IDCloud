<html xmlns:jsp="http://java.sun.com/JSP/Page" 
xmlns:c="http://java.sun.com/jsp/jstl/core" 
xmlns:tiles="http://tiles.apache.org/tags-tiles" 
xmlns:spring="http://www.springframework.org/tags" 
xmlns:sec="http://www.springframework.org/security/tags"
xmlns:util="urn:jsptagdir:/WEB-INF/tags/util" 
xmlns:fn="http://java.sun.com/jsp/jstl/functions" >  

<jsp:directive.page contentType="text/html;charset=UTF-8" />  
<jsp:directive.page pageEncoding="UTF-8" /> 
<spring:url var="index_page" value="/inspiration/index" />
<spring:url var="publish_page" value="/inspiration/publish" />
<spring:url var="management" value="/inspiration/management" />
<spring:url var="contact" value="/inspiration/contact" />

<spring:url var="banner" value="/resources/images/banner-graphic.png" />
<spring:url var="home" value="/" />
<spring:message code="button_home" var="home_label" htmlEscape="false" />
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
		<util:load-scripts />
		<spring:message code="application.name" var="app_name" htmlEscape="false"/>
		<title><spring:message code="welcome_h3" arguments="${app_name}" /></title>
	</head>
	
  	<body id="idcloudbody">
  		<div id="idcloudmenu">
	        <ul>
	          <li><a href="${index_page}"><spring:message code="menu.homepage"/></a></li>
	          <li><a href="${publish_page}"><spring:message code="menu.publish"/></a></li>
	          <li><a href="${management}"><spring:message code="menu.management"/></a></li>
	          <li><a href="${contact}"><spring:message code="menu.contact"/></a></li>
	        </ul>
	    </div>
  		<div id="pgcontainer">
  			<header>
    			<div id="navbar">
	      			<span id='menubtn' type="button">Menu</span>
	      			<a id="homebanner" href="${home}" name="${fn:escapeXml(home_label)}" title="${fn:escapeXml(home_label)}">
    					<span><spring:message code="navigation.title"/></span>
  					</a>
  					<div id="credential">
  						<tiles:insertAttribute name="credential" ignore="true" />
  					</div>
  					<div id="language">
  						<spring:message code="navigation.language.url" var="language_url" />
  						<a href="${language_url}"><spring:message code="navigation.language" />|</a>
  					</div>
  					<!-- use captain icon for toggle menu -->
    			</div>
    			<div class="overlay"></div>
  			</header>
			  <div id="content">
			  	<div id="header">
		   			<tiles:insertAttribute name="header" ignore="true" />
		   		</div>
				    
				<div id="body">
					<tiles:insertAttribute name="body" ignore="true"/>
				</div>
				
				<div id="footer">
				  	<tiles:insertAttribute name="footer" ignore="true"/>
				</div>
			</div>
		</div>
	</body>
</html>
